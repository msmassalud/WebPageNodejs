<html lang="en">

<head>
  <% include ../partials/head %>
</head>

<body class="container">
  <header>
    <% include ../partials/header %>
  </header>
  <main>
    <div class="container">
      <div class="col-sm-6 col-sm-offset-3">
        <h1><span class="fa fa-sign-in"></span> Signup</h1>
        <form action="/signup" method="post" enctype="application/x-www-form-urlencoded">
          <div class="form-group">
            <label for="name">Nombre(s):</label>
            <input type="text" class="text-uppercase form-control" id="name" name="name" required/>
            <label for="pwd">Primer Apellido:</label>
            <input type="text" class="text-uppercase form-control" name="dadLastName" required/>
            <label for="pwd">Segundo Apellido:</label>
            <input type="text" class="text-uppercase form-control" name="momLastName" required/>
            <label for="pwd">Celular:</label>
            <input type="text" onkeypress='return event.charCode >= 48 && event.charCode <= 57' class="text-uppercase form-control" name="cellphone" required/>
            <label for="pwd">C.P.:</label>
            <input type="text" onkeypress='return event.charCode >= 48 && event.charCode <= 57' class="text-uppercase form-control" name="cp" required/>
            <label for="pwd">Correo:</label>
            <input type="text" class="form-control" name="email" />
            <label for="pwd">Contraseña: </label>
            <input type="password" name="password" class="form-control" />
            <label for="pwd">Verificar contraseña: </label>
            <input type="password" name="password_v" class="form-control" />
            <label for="pwd">Fecha de nacimiento:</label>
          </div>
          <button type="submit" class="btn btn-default">Registrar</button>
        </form>
      </div>
    </div>
  </main>
  <footer>
    <% include ../partials/footer %>
  </footer>
</body>

</html>
